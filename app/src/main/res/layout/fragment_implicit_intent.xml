<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".implicit_intent.ImplicitIntentFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_action_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION_VIEW" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_action_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION_DIAL" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_action_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTION_SEND" />

</LinearLayout>